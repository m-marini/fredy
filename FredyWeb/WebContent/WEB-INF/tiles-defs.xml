<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration//EN" "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">
<tiles-definitions>

	<!-- Default layout -->
	<definition name="default.layout" path="/layouts/defaultLayout.jsp">
		<put name="menu" type="string">&amp;nbsp;</put>
		<put name="title">home.title</put>
		<put name="body" type="string" />
	</definition>

	<!-- Content key definition -->
	<definition name="content.layout" path="/layouts/contentKey.jsp">
		<put name="key" type="string" />
	</definition>

	<!-- -->
	<definition name="window.layout" path="/layouts/window.jsp">
		<put name="align" type="string">left</put>
		<put name="title" type="string">&amp;nbsp;</put>
		<put name="body" type="string">&amp;nbsp;</put>
	</definition>

	<!-- Error page -->
	<definition name="error.page" extends="default.layout">
		<put name="body">error.body</put>
	</definition>

	<!-- Error page layout -->
	<definition name="error.body" path="/layouts/errorLayout.jsp">
		<put name="errorMessage">error.message.window</put>
		<put name="errorDetails">error.details.window</put>
	</definition>

	<!-- Error message window -->
	<definition name="error.message.window" extends="window.layout">
		<put name="title">error.message.title</put>
		<put name="body">error.message.body</put>
	</definition>

	<!-- Error message window title -->
	<definition name="error.message.title" extends="content.layout">
		<put name="key" type="string">title.message.error.general</put>
	</definition>

	<!-- Error message window body -->
	<definition name="error.message.body" path="/layouts/errorMessage.jsp" />

	<!-- Error details window -->
	<definition name="error.details.window" extends="window.layout">
		<put name="title">error.details.title</put>
		<put name="body">error.details.body</put>
	</definition>

	<!-- Error details window title -->
	<definition name="error.details.title" extends="content.layout">
		<put name="key" type="string">title.details.error.general</put>
	</definition>

	<!-- Error details window body -->
	<definition name="error.details.body" path="/layouts/stackTrace.jsp" />

	<!-- Home title -->
	<definition name="home.title" extends="content.layout">
		<put name="key" type="string">title.home</put>
	</definition>

	<!-- Home page -->
	<definition name="interaction.page" extends="default.layout">
		<put name="body">query.result.layout</put>
	</definition>

	<!-- -->
	<definition name="left.right.layout" path="/layouts/leftRight.jsp">
		<put name="left" type="string" />
		<put name="right" type="string" />
		<put name="leftVAlign" type="string">top</put>
		<put name="rightVAlign" type="string">top</put>
	</definition>

	<!-- -->
	<definition name="up.down.layout" path="/layouts/upDown.jsp">
		<put name="up" type="string" />
		<put name="up" type="string" />
		<put name="upVAlign" type="string">top</put>
		<put name="downVAlign" type="string">top</put>
	</definition>

	<definition name="scrollBar.layout" path="/scrollBar.jsp" />

	<!-- -->
	<definition name="query.result.layout" extends="left.right.layout">
		<put name="left">query.window</put>
		<put name="right">result.layout</put>
	</definition>

	<!-- -->
	<definition name="query.window" extends="window.layout">
		<put name="title">query.title</put>
		<put name="body">/postulate.jsp</put>
	</definition>

	<!-- Query title -->
	<definition name="query.title" extends="content.layout">
		<put name="key" type="string">title.query</put>
	</definition>

	<!-- -->
	<definition name="result.layout" extends="up.down.layout">
		<put name="up">result.window</put>
		<put name="down">evidence.window</put>
	</definition>

	<!-- -->
	<definition name="result.window" extends="window.layout">
		<put name="title">hypotesys.title</put>
		<put name="body">/hypotesys.jsp</put>
	</definition>

	<!-- Query title -->
	<definition name="hypotesys.title" extends="content.layout">
		<put name="key" type="string">title.hypotesys</put>
	</definition>


	<!-- -->
	<definition name="evidence.window" extends="window.layout">
		<put name="title">evidence.title</put>
		<put name="body">/evidence.jsp</put>
	</definition>

	<!-- Query title -->
	<definition name="evidence.title" extends="content.layout">
		<put name="key" type="string">title.evidence</put>
	</definition>

</tiles-definitions>