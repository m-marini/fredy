<?xml version="1.0" encoding="UTF-8"?>
<rules
	xmlns="http://www.mmarini.org/fuzzy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mmarini.org/fuzzy rules.xsd">
	<rule>
		<if>
			<or>
				<predicate>peli</predicate>
				<predicate>latte</predicate>
			</or>
		</if>
		<then>
			<assign>mammifero</assign>
		</then>
		<else>
			<assign-not>mammifero</assign-not>
		</else>
	</rule>
	
	<rule>
		<if>
			<or>
				<predicate>piume</predicate>
				<and>
					<predicate>vola</predicate>
					<predicate>uova</predicate>
				</and>
			</or>
		</if>
		<then>
			<assign>uccello</assign>
		</then>
		<else>
			<assign-not>uccello</assign-not>
		</else>
	</rule>

	<rule>
		<if>
			<or>
				<predicate>carne</predicate>
				<and>
					<predicate>denti</predicate>
					<predicate>occhi</predicate>
					<predicate>artigli</predicate>
				</and>
			</or>
		</if>
		<then>
			<assign>carnivoro</assign>
		</then>
		<else>
			<assign-not>carnivoro</assign-not>
		</else>
	</rule>
	
	<rule>
		<if>
			<or>
				<and>
					<predicate>mammifero</predicate>
					<predicate>zoccoli</predicate>
				</and>
				<and>
					<predicate>mammifero</predicate>
					<predicate>ruminante</predicate>
				</and>
			</or>
		</if>
		<then>
			<assign>ungulato</assign>
		</then>
		<else>
			<assign-not>ungulato</assign-not>
		</else>
	</rule>
	
	<rule>
		<if>
			<and>
				<predicate>mammifero</predicate>
				<predicate>carnivoro</predicate>
				<predicate>fulvo</predicate>
				<predicate>macchie</predicate>
			</and>
		</if>
		<then>
			<assign>ghepardo</assign>
		</then>
		<else>
			<assign-not>ghepardo</assign-not>
		</else>
	</rule>
	
	<rule>
		<if>
			<and>
				<predicate>mammifero</predicate>
				<predicate>carnivoro</predicate>
				<predicate>fulvo</predicate>
				<predicate>strisce</predicate>
			</and>
		</if>
		<then>
			<assign>tigre</assign>
		</then>
		<else>
			<assign-not>tigre</assign-not>
		</else>
	</rule>

	<rule>
		<if>
			<and>
				<predicate>macchie</predicate>
				<predicate>zampe</predicate>
				<predicate>ungulato</predicate>
				<predicate>collo</predicate>
			</and>
		</if>
		<then>
			<assign>giraffa</assign>
		</then>
		<else>
			<assign-not>giraffa</assign-not>
		</else>
	</rule>

	<rule>
		<if>
			<and>
				<predicate>strisce</predicate>
				<predicate>ungulato</predicate>
			</and>
		</if>
		<then>
			<assign>zebra</assign>
		</then>
		<else>
			<assign-not>zebra</assign-not>
		</else>
	</rule>

	<rule>
		<if>
			<and>
				<predicate>collo</predicate>
				<predicate>uccello</predicate>
				<predicate>bianconero</predicate>
				<not><predicate>vola</predicate></not>
			</and>
		</if>
		<then>
			<assign>struzzo</assign>
		</then>
		<else>
			<assign-not>struzzo</assign-not>
		</else>
	</rule>

	<rule>
		<if>
			<and>
				<not><predicate>vola</predicate></not>
				<predicate>uccello</predicate>
				<predicate>nuota</predicate>
			</and>
		</if>
		<then>
			<assign>pinguino</assign>
		</then>
		<else>
			<assign-not>pinguino</assign-not>
		</else>
	</rule>

	<rule>
		<if>
			<and>
				<predicate>vola</predicate>
				<predicate>uccello</predicate>
			</and>
		</if>
		<then>
			<assign>albatro</assign>
		</then>
		<else>
			<assign-not>albatro</assign-not>
		</else>
	</rule>
</rules>